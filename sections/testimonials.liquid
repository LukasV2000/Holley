<div class="te_outer #container @width:default">
    <h2 class="#hero-heading fs-d4 heading-font main_heading">
        <span class="#accent-text" style="--accent: linear-gradient(90deg, transparent 0, rgba(217, 214, 254, 0.5) 15%, rgba(217, 214, 254, 0.5) 85%, transparent 100%)">{{section.settings.headline}}</span>
    </h2>
    <div class="te_flex">
        <div>
            <img loading="eager" src="{{ section.settings.image | img_url: 'master' }}">
        </div>
        <div>
            <div class="te_inner_Cont">

                <p class="te_title">{{ section.settings.title }}</p>
                <p class="te_body">{{ section.settings.text }}</p>
                <p class="te_title">{{ section.settings.name }}</p>

                <svg width="155" height="31" viewBox="0 0 155 31" fill="none" xmlns="http://www.w3.org/2000/svg">
