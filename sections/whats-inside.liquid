<div class="wi_outer">
    <div class="#container @width:default">
        <h2 class="#hero-heading fs-d4 heading-font main_heading">
            <span class="#accent-text" style="--accent: linear-gradient(90deg, transparent 0, rgba(217, 214, 254, 0.5) 15%, rgba(217, 214, 254, 0.5) 85%, transparent 100%)">{{section.settings.headline}}</span>
        </h2>

        <div class="wi_grid">
            {%  for block in section.blocks %}
                <div>
                    <div class="wi_grid_image">
                        <img loading="eager" src="{{ block.settings.image | img_url: 'master' }}">
                    </div>
                    <h3>{{ block.settings.headline }}</h3>
                    <p>{{ block.settings.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
{
    "name": "Whats inside",
    "tag": "section",
    "settings": [
        {
            "type":"text",
            "id":"headline",
            "label":"Your headline",
            "default":"HOW IT WORKS"
        }
    ],
    "blocks": [
        {
          "name": "block",
          "type": "Block",
          "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Your image"
            },
            {
                "type": "text",
                "id": "headline",
                "label": "Your Headline",
                "default":"Choose Your Box ðŸ“¦"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Your Text",
                "default":"Explore our selection â€”every choice is a win"
            }
          ]
        }
      ]
}
{% endschema %}


<style>
    .wi_outer{
        padding-top: 64px;
