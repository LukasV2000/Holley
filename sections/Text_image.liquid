<div class="Product_text_image">
    <div class="#container @width:default">
        <div class="Product_text_image_flex">
            <div>
                <h2>{{ section.settings.title }}</h2>
                <p>{{ section.settings.text }}</p>
                {% if section.settings.btn_title != blank %}
                    <a class="Desktop_only Product_text_image_button_scroll" href="{{ section.settings.btn_url }}">{{ section.settings.btn_title }}</a>
                {% endif %}
            </div>
            <div>
                <img loading="lazy" src="{{ section.settings.image | img_url: 'master' }}">
            </div>
        </div>
      <div class="Product_text_image_flex">
      {% if section.settings.btn_title != blank %}
         <a class="Mobile_only Product_text_image_button_scroll" href="{{ section.settings.btn_url }}">{{ section.settings.btn_title }}</a>
      {% endif %}
      </div>
    </div>
</div>

{% schema %}
    {
      "name": "Text Image",
      "settings": [
        {
            "type":"text",
            "id": "title",
            "label":"Your Title",
            "default":"Want the whole experience?"
        },
        {
            "type":"text",
            "id": "text",
            "label":"Your Text",
            "default":"Our staff picked the most trending and popular candies and put everything in one box. Experience different cultures through their favourite candies."
        },
        {
            "type":"text",
            "id": "btn_title",
            "label":"Your Button Title",
            "default":"Shop Now"
        },
        {
            "type":"url",
            "id": "btn_url",
            "label":"Your Button Url"
        },
        {
            "type":"image_picker",
            "id": "image",
            "label":"Your Image"
        }
      ],
        "presets": [
          {
            "name": "Text Image"
          }
        ]
    }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}